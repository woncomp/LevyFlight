<Window x:Class="LevyFlight.LevyFlightWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LevyFlight"
             mc:Ignorable="d" Title="Levy Flight" ShowInTaskbar="False"
             d:DesignHeight="450" d:DesignWidth="800"
             KeyDown="Window_KeyDown" PreviewKeyDown="Window_PreviewKeyDown" Loaded="Window_Loaded" SourceInitialized="Window_SourceInitialized" Closing="Window_Closing">
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="txtFilter" PreviewKeyDown="txtFilter_KeyDown" TextChanged="txtFilter_TextChanged"/>
            <StackPanel Orientation="Horizontal" Grid.Column="1">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="2,0,0,0"/>
                    </Style>
                </StackPanel.Resources>
                <Label>|</Label>
                <Button>All In One</Button>
                <Button>Files</Button>
                <Button>Bookmarks</Button>
                <Button>Edits</Button>
                <Label>|</Label>
                <Button Click="Button_Click">Settings</Button>
            </StackPanel>
        </Grid>
        <Border Grid.Row="1" Padding="2,2,2,2" BorderThickness="2,2,2,2" CornerRadius="2,2,2,2">
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="35*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="65*"/>
                </Grid.ColumnDefinitions>
                <ListBox Name="lstFiles" ItemsSource="{Binding Path=ViewSource.View}" SelectionChanged="lstFiles_SelectionChanged" MouseDoubleClick="lstFiles_MouseDoubleClick" AlternationCount="1000">
                    <ListBox.Resources>
                        <local:QuickOpenKeyLabelConverter x:Key="QuickOpenKeyLabelConverter" />
                        <local:AlternationIndexToBrushConverter x:Key="AlternationIndexToBrushConverter" />
                    </ListBox.Resources>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource Self}, Path=(ItemsControl.AlternationIndex), Converter={StaticResource AlternationIndexToBrushConverter}}" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="LightBlue" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type JumpItem}">
                            <DockPanel LastChildFill="True">
                                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=(ItemsControl.AlternationIndex), Converter={StaticResource QuickOpenKeyLabelConverter}}" Width="16" FontWeight="Bold" TextAlignment="Center"/>
                                <TextBlock Text="{Binding Score}" Width="50"/>
                                <TextBlock Text="{Binding DisplayName}" Margin="8,0,0,0" />
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <GridSplitter Grid.Column="1" Width="2" />
                <TextBlock Grid.Column="2" Text="{Binding Path=DebugString}" FontFamily="Cascadia Mono" />
            </Grid>
        </Border>
        <TextBlock Grid.Row="2" Text="{Binding Path=SelectedItemFullPath}" />
    </Grid>
</Window>
